fping -a -g -q 10.0.3.0/24 # whitout -q shows also the unreacheble ping

#bash scan script command bash scriptname rangeOfScann bash ping_rang2.sh 10.0.3.0 0 5
#!/bin/bash
for i in `seq ${2} ${3}`
do
ping -c 1 ${1}.${i} > /dev/null 2>&1
if [ $? -eq 0 ]; then
        echo "${1}.${i} responded."
 else
	 echo "${1}.${i} did not respond."
	 fi
	done
